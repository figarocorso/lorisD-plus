{
    "name": "lorisD+",
    "options_page": "options.html",
    "permissions": [
        "storage",
        "alarms"
    ],
    "description": "Loris lovers unite! Prank your friends with adorable slow loris images that subtly take over their browsing experience. Lunga vita a Loris!",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "incrementImageReplace.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "css/style.css"
            ],
            "js": [
                "lorisImages.js",
                "imageReplacer.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}